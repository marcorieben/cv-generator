{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "prompt_id": "PDF_TO_JSON_V1.3",
  "version": "1.3",
  "description": "Extraktionsschema für CVs gemäss PDF_TO_JSON_V1.3. Es dürfen ausschliesslich Felder verwendet werden, die in diesem Schema definiert sind.",
  "rules": {
    "no_invention": true,
    "mark_missing": "! fehlt – bitte prüfen!",
    "max_reference_project_bullets": 5,
    "language_levels": {
      "5": "Muttersprache",
      "4": "Verhandlungssicher",
      "3": "Sehr gute Kenntnisse",
      "2": "Gute Kenntnisse",
      "1": "Grundkenntnisse"
    }
  },
  "type": "object",
  "required": [
    "Vorname",
    "Nachname",
    "Hauptrolle",
    "Kurzprofil",
    "Expertise",
    "Aus_und_Weiterbildung",
    "Trainings_und_Zertifizierungen",
    "Sprachen",
    "Ausgewählte_Referenzprojekte"
  ],
  "additionalProperties": false,
  "properties": {
    "Vorname": {
      "type": "string"
    },
    "Nachname": {
      "type": "string"
    },
    "Hauptrolle": {
      "type": "object",
      "required": ["Titel", "Beschreibung"],
      "properties": {
        "Titel": {
          "type": "string",
          "const": "Hauptrolle",
          "description": "Fixer Titel für die Rollenüberschrift"
        },
        "Beschreibung": {
          "type": "string",
          "description": "Kurzbeschreibung der Hauptrolle in maximal 5-10 Wörtern. Bei fehlenden Informationen: '! fehlt – bitte prüfen!'"
        }
      }
    },
    "Nationalität": {
      "type": "string"
    },
    "Hauptausbildung": {
      "type": "string"
    },
    "Kurzprofil": {
      "type": "string",
      "description": "Zusammenfassender Langtext"
    },
    "Expertise": {
      "type": "object",
      "required": ["Fachwissen_und_Schwerpunkte"],
      "properties": {
        "Fachwissen_und_Schwerpunkte": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["Kategorie", "BulletList"],
            "properties": {
              "Kategorie": {
                "type": "string",
                "enum": [
                  "Projektmethodik",
                  "Tech Stack & Tools",
                  "Weitere Skills"
                ],
                "description": "Verwende nur diese vordefinierten Kategorien"
              },
              "BulletList": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "Aus_und_Weiterbildung": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["Zeitraum", "Institution", "Abschluss"],
        "properties": {
          "Zeitraum": {
            "type": "string",
            "description": "YYYY - YYYY oder YYYY"
          },
          "Institution": {
            "type": "string"
          },
          "Abschluss": {
            "type": "string"
          }
        }
      }
    },
    "Trainings_und_Zertifizierungen": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["Zeitraum", "Institution", "Titel"],
        "properties": {
          "Zeitraum": {
            "type": "string",
            "description": "YYYY - YYYY oder ! fehlt – bitte prüfen!"
          },
          "Institution": {
            "type": "string"
          },
          "Titel": {
            "type": "string"
          }
        }
      }
    },
    "Sprachen": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["Sprache", "Level"],
        "properties": {
          "Sprache": {
            "type": "string"
          },
          "Level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        }
      }
    },
    "Ausgewählte_Referenzprojekte": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Zeitraum",
          "Rolle",
          "Kunde",
          "Tätigkeiten",
          "Technologien",
          "Methodik"
        ],
        "properties": {
          "Zeitraum": {
            "type": "string",
            "description": "MM/YYYY - MM/YYYY oder MM/YYYY - Heute"
          },
          "Rolle": {
            "type": "string"
          },
          "Kunde": {
            "type": "string"
          },
          "Tätigkeiten": {
            "type": "array",
            "maxItems": 5,
            "items": {
              "type": "string"
            }
          },
          "Technologien": {
            "type": "string",
            "description": "Kommagetrennte Liste der verwendeten Technologien, Tools und Plattformen"
          },
          "Methodik": {
            "type": "string",
            "description": "Spezifische Projektmethodiken kommagetrennt (z.B. Scrum, SAFe, Kanban, HERMES, Waterfall, Agile). Keine generischen Begriffe wie 'Projektmanagement' oder 'Beratung'."
          }
        }
      }
    }
  }
}
